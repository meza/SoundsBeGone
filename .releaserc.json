{
  "branches": [
    "main",
    {
      "name": "beta",
      "prerelease": true
    }
  ],
  "tagFormat": "v${version}",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "config": "@meza/mezas-conventional-changelog"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "config": "@meza/mezas-conventional-changelog"
      }
    ],
    "semantic-release-export-data",
    [
      "@semantic-release/changelog",
      {
        "changelogTitle": "# Changelog",
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "build/libs/*.jar"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/release.sh \"${nextRelease.version}\""
      }
    ],
    ["semantic-release-discord-notifier", {
      "embedJson": {
        "username": "Sounds be Gone",
        "avatar_url": "https://github.com/meza/SoundsBeGone/blob/main/src/main/resources/assets/soundsbegone/icon.png?raw=true",
        "content": "# :rocket: ${nextRelease.version} just dropped",
        "embeds": [
          {
            "title": "What changed?",
            "description": "${nextRelease.notes}",
            "color": 7377919,
            "footer": {
              "text": "Curseforge might take a few hours to approve the file so if you want to download it immediately, use the Modrinth link."
            }
          }
        ],
        "components": [
          {
            "type": 1,
            "components": [
              {
                "type": 2,
                "style": 5,
                "label": "Download from Modrinth",
                "url": "https://modrinth.com/mod/soundsbegone"
              },
              {
                "type": 2,
                "style": 5,
                "label": "Download from Curseforge",
                "url": "https://www.curseforge.com/minecraft/mc-mods/sounds-be-gone/"
              }
            ]
          }
        ]
      }
    }]
  ]
}
