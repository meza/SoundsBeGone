{
  "branches": [
    "MC1.21",
    {
      "name": "MC1.21-beta",
      "prerelease": true
    }
  ],
  "tagFormat": "v${version}-MC1.21",
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    "semantic-release-export-data",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/github",
      {
        "successComment": ":tada: This issue has been resolved for **Minecraft: 1.21** in version ${nextRelease.version} :tada:\\n\\nThe release is available on [GitHub release](<github_release_url>)",
        "assets": [
          {
            "path": "neoforge/build/libs/!(*-@(dev|sources|shadow)).jar",
            "name": "SoundsBeGone-neoforge-${nextRelease.gitTag}.jar",
            "label": "SoundsBeGone-neoforge-${nextRelease.gitTag}.jar"
          },
          {
            "path": "fabric/build/libs/!(*-@(dev|sources|shadow)).jar",
            "name": "SoundsBeGone-fabric-${nextRelease.gitTag}.jar",
            "label": "SoundsBeGone-fabric-${nextRelease.gitTag}.jar"
          }
        ]
      }
    ],
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "./scripts/release.sh \"${nextRelease.version}\""
      }
    ]
  ]
}
